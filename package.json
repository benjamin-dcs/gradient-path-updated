    "d3": "^7.9.0",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "pretty-quick": "^4.1.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
